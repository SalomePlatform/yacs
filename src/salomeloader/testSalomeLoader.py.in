  def test1(self):
    """test GeomGraph.xml"""
    p= self.loader.load(os.path.join("@srcdir@","samples","GeomGraph.xml"))
    p.saveSchema("tata.xml")

  def test2(self):
    """test GeomGraphGates_py.xml"""
    p= self.loader.load(os.path.join("@srcdir@","samples","GeomGraphGates_py.xml"))
